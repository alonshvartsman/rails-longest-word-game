<center class="popout">
<h1 class="heading">Start a new game!</h1>
</center>
<center>
<ul>
  <% @letters.each_with_index do |letter, index| %>
    <li class="btn btn-primary" style="font-size: 50px;"><%= letter %></li>
  <% end %>
</ul>

<form action="/result" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" class="searchbar" name="word">
  <button type="submit" class="learn-more">Play</button>
</form>
</center>

